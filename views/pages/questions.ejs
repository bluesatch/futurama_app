<%- include('../partials/header') %>

<main class="main" id="main">
    <div class="container">
        <h2>Test Your Futurama Knowledge</h2>
    
        <div>
            <h3 class="text-success text-center"><%= question.question %></h3>
            <h4 class="text-center">Select the best option</h4>
            <div class="options-block">
                <% question.possibleAnswers.forEach(answer => { %>

                    <div class="quiz-options text-center" data-option="<%= answer %>">
                        <%= answer %>
                    </div>
                
                <%}) %>
            </div>
        </div>

    </div>
</main>

<%- include('../partials/footer') %>